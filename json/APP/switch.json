{
  "$jason": {
    "head": {
      "title": "Switch",
      "description": "A jasonette app",
      "offline": "true",
      "styles": {
        "left_align_switch_styles": {
          "color": "rgb(0, 255, 0)",
          "color:disabled": "rgb(255,0,0)",
          "align": "left"
        },
        "center_align_switch_styles": {
          "color": "rgb(0, 255, 0)",
          "color:disabled": "rgb(255,0,0)",
          "align": "center"
        },
        "right_align_switch_styles": {
          "color": "rgb(0, 255, 0)",
          "color:disabled": "rgb(255,0,0)",
          "align": "right"
        }
      },
      "actions": {
        "$show": {
          "type": "$render"
        },
        "$pull": {
          "type": "$reload"
        },
        "banner1": {
          "type": "$util.banner",
          "options": {
            "title": "{{$get.light}}",
            "description": "{{$jason.item}}"
          },
          "success": {
            "type": "$render"
          }
        },
        "banner2": {
          "type": "$util.banner",
          "options": {
            "title": "{{$get.light}}",
            "description": "{{$jason.item}}"
          },
          "success": {
            "type": "$render"
          }
        },
        "banner3": {
          "type": "$util.banner",
          "options": {
            "title": "{{$get.light}}",
            "description": "{{$jason.item}}"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "title": "Switch",
            "style": {
              "background": "rgb(0, 0, 204)",
              "color": "rgb(255, 255, 255)"
            }
          },
          "sections": [
            {
              "type": "vertical",
              "items": [
                {
                  "type": "horizontal",
                  "components": [
                    {
                      "type": "switch",
                      "name": "light1",
                      "value": "true",
                      "class": "right_align_switch_styles",
                      "action": {
                        "trigger": "banner1",
                        "options": {
                          "item": "Light1 is On?"
                        }
                      }
                    }
                  ]
                },
                {
                  "type": "horizontal",
                  "components": [
                    {
                      "type": "switch",
                      "name": "light2",
                      "value": "true",
                      "class": "center_align_switch_styles",
                      "action": {
                        "trigger": "banner2",
                        "options": {
                          "item": "Light2 is On?"
                        }
                      }
                    }
                  ]
                },
                {
                  "type": "horizontal",
                  "components": [
                    {
                      "type": "switch",
                      "name": "light3",
                      "value": "true",
                      "class": "left_align_switch_styles",
                      "action": {
                        "trigger": "banner3",
                        "options": {
                          "item": "Light3 is On?"
                        }
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  }
}