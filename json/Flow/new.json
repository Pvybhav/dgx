{
  "$jason": {
    "head": {
      "title": "Display location",
      "actions": {
        "type": "$geo.get",
        "success": {
          "type": "$render"
        }
      },
      "templates": {
        "body": {
          "sections": [
            {
              "items": [
                {
                  "type": "label",
                  "text": "Latitude: {{ $jason.coord.split(',')[0] }}"
                },
                {
                  "type": "label",
                  "text": "Longitude: {{ $jason.coord.split(',')[1] }}"
                }
              ]
            }
          ]
        }
      }
    }
  }
}