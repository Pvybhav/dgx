{
  "$jason": {
    "head": {
      "title": "TITLE",
      "description": "DESCRIPTION",
      "offline": "true",
      "styles": {
        "text_field": {
          "font": "HelveticaNeue",
          "size": "15",
          "color": "#ff0000",
          "padding": "10"
        }
      },
      "actions": {
        "$show": {
          "type": "$render"
        },
        "$load": {
          "type": "$render"
        },
        "refresh_page": {
          "type": "$refresh",
          "success": {
            "type": "$util.toast",
            "options": {
              "text": "Page refreshed successfully",
              "type": "warning"
            }
          }
        },
        "save": {
          "type": "$render",
          "success": {
            "type": "$global.set",
            "options": {
              "ef_s1_textField": "{{$get.textFieldName || ' '}}",
              "ef_s1_TextArea": "{{$get.textAreaName || ' '}}"
            },
            "success": {
              "type": "$href",
              "options": {
                "url": "https://pvybhav.github.io/json/Global_Variables/screen-2.json"
              }
            }
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "menu": {
              "text": "Reset",
              "style": {
                "size": "15",
                "font": "Helvetica",
                "color": "#4f8ff7"
              },
              "action": {
                "type": "$global.reset",
                "options": {
                  "items": [
                    "ef_s1_textField",
                    "ef_s1_TextArea"
                  ]
                },
                "success": {
                  "type": "$render"
                }
              }
            }
          },
          "sections": [
            {
              "type":"horizontal",
              "header": {
                "type":"label",
                "text": "Horizontal section with labels",
                "style":{
                  "align": "center",
                  "top": "5"
                }
              },
              "items":[
                {
                  "type": "label",
                  "text": "horizontal label-1"
                },
                {
                  "type": "label",
                  "text": "horizontal label-2"
                },
                {
                  "type": "label",
                  "text": "horizontal label-3"
                },
                {
                  "type": "label",
                  "text": "horizontal label-4"
                },
                {
                  "type": "label",
                  "text": "horizontal label-5"
                },
                {
                  "type": "label",
                  "text": "horizontal label-6"
                },
                {
                  "type": "label",
                  "text": "horizontal label-7"
                },
                {
                  "type": "label",
                  "text": "horizontal label-8"
                },
                {
                  "type": "label",
                  "text": "horizontal label-9"
                },
                {
                  "type": "label",
                  "text": "horizontal label-10"
                }
              ]
            },
            {
              "type": "horizontal",
              "header": {
                "type": "label",
                "text": "Horizontal section with images",
                "style": {
                  "align": "center",
                  "top": "5"
                }
              },
              "items": [
                {
                  "type": "image",
                  "url": "https://image.flaticon.com/sprites/new_packs/1239031-tropical.png",
                  "style":{
                    "width": 100,
                    "height":100,
                    "corner_radius": 50
                  }
                },
                {
                  "type": "image",
                  "url": "https://image.flaticon.com/sprites/new_packs/1239031-tropical.png",
                  "style": {
