                  "style": {
                    "width": 100,
                    "height": 100,
                    "corner_radius": 50
                  }
                }
              ]
            },
            {
              "type": "vertical",
              "items": [
                {
                  "type": "label",
                  "text": "Global value is: {{$global.ef_s1_textField || ' '}}"
                },
                {
                  "type": "vertical",
                  "style": {
                    "padding": "10"
                  },
                  "components": [
                    {
                      "type": "textfield",
                      "name": "textFieldName",
                      "value": "{{$global.ef_s1_textField || ' '}}",
                      "placeholder": "Add textFieldValue here",
                      "contentDescription": "field1",
                      "action": {
                        "type": "$render"
                      }
                    },
                    {
                      "type": "textarea",
                      "name": "textAreaName",
                      "placeholder": "Text Area",
                      "value": "{{$global.ef_s1_TextArea || ' '}}",
                      "style": {
                        "background": "rgba(0,0,0,0)",
                        "placeholder_color": "#cecece",
                        "font": "HelveticaNeue",
                        "align": "center",
                        "width": "100%",
                        "height": "100",
                        "size": "12"
                      },
                      "contentDescription": "field2",
                      "action": {
                        "type": "$render"
                      }
                    }
                  ]
                },
                {
                  "type": "button",
                  "text": "Save Global Variables",
                  "action": {
                    "type": "$render",
                    "success": {
                      "trigger": "save"
                    }
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}