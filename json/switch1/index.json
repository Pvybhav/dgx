{
  "$jason": {
    "head": {
      "actions": {
        "$load": {
          "type": "$global.set",
          "options": {

          },
          "success": {
            "type": "$render",
            "success": {
              "type": "$util.toast",
              "options": {
                "text": "Page loaded successfully",
                "type": "warning"
              }
            }
          }
        },
        "$pull": {
          "type": "$reload",
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "sections": [
            {
              "items": [
                {
                  "type": "vertical",
                  "components": [
                    {
                      "type": "dropdown",
                      "name": "shift",
                      "value" : "Value 1",
                      "contentDescription": "shift",
                      "options": [
                        {
                          "value": "Value 1",
                          "defaultSelected": "false"
                        },
                        {
                          "value": "Value 2",
                          "defaultSelected": "false"
                        },
                        {
                          "value": "Value 3",
                          "defaultSelected": "true"
                        }
                      ],
                      "style": {
                        "size": "20",
                        "color": "rgb(200,130,0)"

                      },
                      "action": {
                        "type": "$util.toast",
                        "options": {
                          "text": "{{$get.shift}}",
                          "type": "warning"
                        }
                      }
                    },
                    {
                      "type": "textfield",
                      "name": "txtfield",
                      "placeholder": "Enter Text",
                      "style": {
                        "placeholder_color": "#cecece",
                        "font": "HelveticaNeue",
                        "align": "center",
                        "width": "200",
                        "height": "60",
                        "size": "12"
                      }
                    },
                    {
                      "type": "switch",
                      "name": "lights",
                      "value": [
                        {
                          "{{#if $global.lightOn}}": "{{$global.lightOn}}"
                        },
                        {
                          "{{#else}}": "false"
                        }
                      ],
                      "switch_text" :"1",
                      "style":{
                        "textsize":"10",
                        "scalex" : "5",
                        "scaley":"5"
                      },
                      "action": {
                        "type": "$global.set",
                        "options": {
                          "section_id":"something",
                          "lightOn":"{{$get.lights}}"
                        }
                      }
                    },
                    {
                      "type": "switch",
                      "name": "lights3",
                      "value": [
                        {
                          "{{#if $global.lightOn3}}": "{{$global.lightOn3}}"
                        },
                        {
                          "{{#else}}": "false"
                        }
                      ],
                      "switch_text" :"1",
                      "style":{
                        "textsize":"10",
                        "scalex" : "5",
                        "scaley":"5"
                      },
                      "action": {
                        "type": "$global.set",
                        "options": {
                          "section_id":"something",
                          "lightOn3":"{{$get.lights3}}"
                        }
                      }
                    },
                    {
                      "type": "switch",
                      "name": "lights1",
                      "value": [
                        {
                          "{{#if $global.lightOn1}}": "{{$global.lightOn1}}"
                        },
                        {
                          "{{#else}}": "false"
                        }
                      ],
                      "switch_text" :"1",
                      "style":{
                        "textsize":"10",
                        "scalex" : "5",
                        "scaley":"5"
                      },
                      "action": {
                        "type": "$global.set",
                        "options": {
                          "section_id":"something",
                          "lightOn1":"{{$get.lights1}}"
                        }
                      }
                    },
                    {
                      "type": "switch",
                      "name": "lights2",
                      "value": [
                        {
                          "{{#if $global.lightOn2}}": "{{$global.lightOn2}}"
                        },
                        {
                          "{{#else}}": "false"
                        }
                      ],
                      "switch_text" :"1",
                      "style":{
                        "textsize":"10",
                        "scalex" : "5",
                        "scaley":"5"
                      },
                      "action": {
                        "type": "$global.set",
                        "options": {
                          "section_id":"something",
                          "lightOn2":"{{$get.lights2}}"
                        }
                      }
                    }
                    

                  ]
                },
                {
                  "type": "horizontal",
                  "components": [
                    {
                      "type": "button",
                      "text": "Click",
                      "style": {
                        "width": "50",
                        "height": "50",
                        "background": "#00ff00",
                        "color": "#ffffff",
                        "font": "HelveticaNeue",
                        "size": "12"
                      },
                      "action": {
                        "type": "$global.set",
                        "options": {
                          "section_id":"something",
                          "dropdownval": "{{$get.shift}}",
                          "textbox": "{{$get.txtfield}}",
                          "lightOn2":[
                            {
                              "{{#if $global.lightOn2}}": "{{$global.lightOn2}}"
                            },
                            {
                              "{{#else}}": "false"
                            }
                          ],
                          "lightOn1":[
                            {
                              "{{#if $global.lightOn2}}": "{{$global.lightOn2}}"
                            },
                            {
                              "{{#else}}": "false"
                            }
                          ],
                          "lightOn3":[
                            {
                              "{{#if $global.lightOn2}}": "{{$global.lightOn2}}"
                            },
                            {
                              "{{#else}}": "false"
                            }
                          ],
                          "lightOn":[
                            {
                              "{{#if $global.lightOn2}}": "{{$global.lightOn2}}"
                            },
                            {
                              "{{#else}}": "false"
                            }
                          ]
                        },
                        "success": {
                          "type": "$href",
                          "options": {
                            "url": "https://pvybhav.github.io/json/switch1/pageTwo.json"
                          }
                        }
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  }
}