{
  "$jason": {
    "head": {
      "title": "Screen-2",
      "actions": {
        "$show": {
          "type": "$render"
        },
        "save": {
          "type": "$global.set",
          "options": {
            "ef_s1_textField": "{{$get.textFieldName}}",
            "ef_s1_TextArea": "{{$get.textAreaName}}",
            "ef_s1_Switch": "{{$get.switchName}}"
          },
          "success": {
            "type": "href",
            "options": {
              "url": "https://pvybhav.github.io/json/Global_Variables/screen-1.json"
            }
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "menu": {
              "text": "Reset",
              "style": {
                "size": "15",
                "font": "Helvetica",
                "color": "#4f8ff7"
              },
              "action": {
                "type": "$global.reset",
                "options": {
                  "items": [
                    "ef_s1_textField"
                  ]
                },
                "success": {
                  "type": "$close"
                }
              }
            }
          },
          "sections": [
            {
              "type": "vertical",
              "items": [
                {
                  "type": "label",
                  "text": "Global value is: {{$global.ef_s1_textField || ''}}"
                },
                {
                  "type": "vertical",
                  "style": {
                    "padding": "10"
                  },
                  "components": [
                    {
                      "type": "textfield",
                      "name": "textFieldName",
                      "value": "{{$global.ef_s1_textField || ''}}",
                      "placeholder": "Add textFieldValue here",
                      "contentDescription": "field1"
                    },
                    {
                      "type": "textarea",
                      "name": "textAreaName",
                      "placeholder": "Text Area",
                      "value": "{{$global.ef_s1_textArea || ''}}",
                      "style": {
                        "background": "rgba(0,0,0,0)",
                        "placeholder_color": "#cecece",
                        "font": "HelveticaNeue",
                        "align": "center",
                        "width": "100%",
                        "height": "100",
                        "size": "12"
                      },
                      "contentDescription": "field2"
                    },
                    {
                      "type": "switch",
                      "name": "switchName",
                      "value": "true",
                      "action": {
                        "type": "$util.banner",
                        "options": {
                          "title": "Is true?",
                          "description": "{{$get.switchName}}"
                        },
                        "contentDescription": "field3"
                      }
                    }
                  ]
                },
                {
                  "type": "button",
                  "text": "Save Global Variables",
                  "action": {
                    "trigger": "save"
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}