{
  "$jason": {
    "head": {
      "title": "Screen-1",
      "actions": {
        "$show": {
          "type": "$render"
        },
        "$pull": {
          "type": "$reload"
        },
        "save": {
          "type": "$render",
          "success": {
            "type": "$global.set",
            "options": {
              "ef_s1_textField": "{{$get.textFieldName || ' '}}",
              "ef_s1_TextArea": "{{$get.textAreaName || ' '}}",
              "ef_s1_Switch": "{{$get.switchName || 'false'}}",
              "ef_s1_Dropdown": "{{$get.dropdownName}}"
            },
            "success": {
              "type": "$href",
              "options": {
                "url": "https://pvybhav.github.io/json/Global_Variables/backup/screen-2.json"
              }
            }
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "menu": {
              "text": "Reset",
              "style": {
                "size": "15",
                "font": "Helvetica",
                "color": "#4f8ff7"
              },
              "action": {
                "type": "$global.reset",
                "options": {
                  "items": [
                    "ef_s1_textField",
                    "ef_s1_TextArea",
                    "ef_s1_Switch",
                    "ef_s1_Dropdown"
                  ]
                },
                "success": {
                  "type": "$render"
                }
              }
            }
          },
          "sections": [
            {
              "type": "vertical",
              "items": [
                {
                  "type": "label",
                  "text": "Global value is: {{$global.ef_s1_textField || ' '}} {{$global.ef_s1_TextArea || ' '}} {{$global.ef_s1_Switch || ' '}}"
                },
                {
                  "type": "vertical",
                  "style": {
                    "padding": "10"
                  },
                  "components": [
                    {
                      "type": "textfield",
                      "name": "textFieldName",
                      "value": "{{$global.ef_s1_textField || ' '}}",
                      "placeholder": "Add textFieldValue here",
                      "contentDescription": "field1"
                    },
                    {
                      "type": "textarea",
                      "name": "textAreaName",
                      "placeholder": "Text Area",
                      "value": "{{$global.ef_s1_TextArea || ' '}}",
                      "style": {
                        "background": "rgba(0,0,0,0)",
                        "placeholder_color": "#cecece",
                        "font": "HelveticaNeue",
                        "align": "center",
                        "width": "100%",
                        "height": "100",
                        "size": "12"
                      },
                      "contentDescription": "field2"
                    },
                    {
                      "type": "switch",
                      "name": "switchName",
                      "value": "{{$global.ef_s1_Switch || 'false'}}",
                      "contentDescription": "field3"
                    },
                    {
                      "type": "dropdown",
                      "name": "dropdownName",
                      "contentDescription": "field4",
                      "options": [
                        {
                          "value": "Value 1 {{if($global.ef_s1_Dropdown == 'Value 1') return true; else return false}}",
                          "defaultSelected": "{{if($global.ef_s1_Dropdown == 'Value 1') return true; else return false}}"
                        },
                        {
                          "value": "Value 2 {{if($global.ef_s1_Dropdown == 'Value 2') return true; else return false}}",
                          "defaultSelected": "true"
                        },
                        {
                          "value": "Value 3 {{if($global.ef_s1_Dropdown == 'Value 3') return true; else return false}}",
                          "defaultSelected": "false"
                        }
                      ],
                      "style": {
                        "size": "10",
                        "color": "rgb(200,130,0)",
                        "padding": "5"
                      },
                      "action":{
                        "type": "$util.toast",
                        "options":{
                          "text": "{{$get.dropdownName}}"
                        }
                      }
                    }
                  ]
                },
                {
                  "type": "button",
                  "text": "Save Global Variables",
                  "action": {
                    "type": "$render",
                    "success": {
                      "trigger": "save"
                    }
                  }
                },
                {
                  "type": "button",
                  "text": "Go to screen-2",
                  "action": {
                    "type": "$href",
                    "url": "https://pvybhav.github.io/json/Global_Variables/backup/screen-2.json"
                  }
                },
                {
                  "type": "button",
                  "text": "Go to screen-3",
                  "action": {
                    "type": "$href",
                    "url": "https://pvybhav.github.io/json/Global_Variables/backup/screen-3.json"
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}