{
  "$jason": {
    "head": {
      "title": "Screen-1",
      "data": {
        "name": "Homer",
        "defaultSelectedValue": "Value 2",
        "dropdownOptions": [
          {
            "value": "Value 1",
            "defaultSelected": false
          },
          {
            "value": "Value 2",
            "defaultSelected": true
          },
          {
            "value": "Value 3",
            "defaultSelected": false
          }
        ]
      },
      "actions": {
        "$show": {
          "type": "$render"
        },
        "$pull": {
          "type": "$reload"
        },
        "save": {
          "type": "$global.set",
          "options": {
            "ef_s1_textField": "{{$get.textFieldName || $global.ef_s1_textField || ' '}}",
            "ef_s1_TextArea": "{{$get.textAreaName || $global.ef_s1_TextArea || ' '}}",
            "ef_s1_Switch": "{{$get.switchName || $global.ef_s1_Switch || false}}",
            "ef_s1_Dropdown": "{{$get.dropdownName || $global.ef_s1_Dropdown}}"
          },
          "success": {
            "type": "$href",
            "options": {
              "url": "https://pvybhav.github.io/json/Global_Variables/screen-2.json"
            }
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "menu": {
              "text": "Reset",
              "style": {
                "size": "15",
                "font": "Helvetica",
                "color": "#4f8ff7"
              },
              "action": {
                "type": "$global.reset",
                "options": {
                  "items": [
                    "ef_s1_textField",
                    "ef_s1_TextArea",
                    "ef_s1_Switch",
                    "ef_s1_Dropdown"
                  ]
                },
                "success": {
                  "type": "$render"
                }
              }
            }
          },
          "sections": [
            {
              "type": "vertical",
              "items": [
                {
                  "type": "label",
                  "text": "Global values TF : {{$global.ef_s1_textField || ' '}} TA : {{$global.ef_s1_TextArea || ' '}} SW : {{$global.ef_s1_Switch || ' '}} DD : {{$global.ef_s1_Dropdown}}"
                },
                {
                  "type": "vertical",
                  "style": {
                    "padding": "10"
                  },
                  "components": [
                    {
                      "type": "textfield",
                      "name": "textFieldName",
                      "value": "{{$global.ef_s1_textField || ' '}}",
                      "placeholder": "Add textFieldValue here",
                      "contentDescription": "field1"
                    },
                    {
                      "type": "textarea",
                      "name": "textAreaName",
                      "placeholder": "Text Area",
                      "value": "{{$global.ef_s1_TextArea || ' '}}",
                      "style": {
                        "background": "rgba(0,0,0,0)",
                        "placeholder_color": "#cecece",
                        "font": "HelveticaNeue",
                        "align": "center",
                        "width": "100%",
                        "height": "100",
                        "size": "12"
                      },
                      "contentDescription": "field2"
                    },
                    {
                      "type": "switch",
                      "name": "switchName",
                      "value": "{{$global.ef_s1_Switch}}",
                      "contentDescription": "field3",
                      "action": {
                        "type": "$global.set",
                        "options": {
                          "ef_s2_Switch": "{{$get.switchName}}"
                        }
                      }
                    },
                    {
                      "type": "dropdown",
                      "name": "dropdownName",
                      "contentDescription": "field4",
                      "options": {
                        "{{#each dropdownOptions}}": {
                          "value": "{{value}}",
                          "defaultSelected": [
                            {
                              "{{#if defaultSelectedValue==value}}": "true"
                            }
                          ]
                        }
                      },
                      "style": {
                        "size": "10",
                        "color": "rgb(200,130,0)",
                        "padding": "5"
                      },
                      "action": {
                        "type": "$global.set",
                        "options": {
                          "ef_s1_Dropdown": "{{$get.dropdownName}}"
                        }
                      }
                    }
                  ]
                },
                {
                  "type": "label",
                  "text": "{{JSON.stringify($jason)}}"
                },
                {
                  "type": "label",
                  "text": "{{var label = $jason.defaultSelectedValue; return label;}}"
                },
                {
                  "type": "label",
                  "text": [
                    {
                      "{{#if defaultSelectedValue==$global.ef_s1_Dropdown}}": "Value 2"
                    },
                    {
                      "{{#elseif defaultSelectedValue==$global.ef_s1_Dropdown}}": "Value 1"
                    },
                    {
                      "{{#elseif defaultSelectedValue==$global.ef_s1_Dropdown}}": "Value 3"
                    },
                    {
                      "{{#else defaultSelectedValue!=$global.ef_s1_Dropdown}}": "No Match"
                    }
                  ]
                },
                {
                  "type": "button",
                  "text": "Save Global Variables",
                  "action": {
                    "trigger": "save"
                  }
                },
                {
                  "type": "button",
                  "text": "Go to screen-2",
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "https://pvybhav.github.io/json/Global_Variables/screen-2.json"
                    }
                  }
                },
                {
                  "type": "button",
                  "text": "Go to screen-3",
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "https://pvybhav.github.io/json/Global_Variables/screen-3.json"
                    }
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}