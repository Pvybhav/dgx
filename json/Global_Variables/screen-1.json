{
  "$jason": {
    "head": {
      "title": "Screen-2",
      "actions": {
        "$show": {
          "type": "$render"
        },
        "save": {
          "type": "$global.set",
          "options": {
            "textFieldValue": "{{$get.textFieldName}}"
          },
          "success": {
            "type": "$close"
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "menu": {
              "text": "Reset",
              "style": {
                "size": "15",
                "font": "Helvetica",
                "color": "#4f8ff7"
              },
              "action": {
                "type": "$global.reset",
                "options": {
                  "items": [
                    "textFieldName"
                  ]
                },
                "success": {
                  "type": "$close"
                }
              }
            }
          },
          "sections": [
            {
              "type": "vertical",
              "items": [
                {
                  "type": "label",
                  "text": "Global value is: {{$global.textFieldName || ''}}"
                },
                {
                  "type": "vertical",
                  "style": {
                    "padding": "10"
                  },
                  "components": [
                    {
                      "type": "textfield",
                      "name": "textFieldName",
                      "value": "{{$global.textFieldName || ''}}",
                      "placeholder": "Add textFieldName here"
                    }
                  ]
                },
                {
                  "type": "button",
                  "text": "Save Global Variable",
                  "action": {
                    "trigger": "save"
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}