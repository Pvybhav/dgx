{
  "$jason": {
    "head": {
      "title": "TextField",
      "styles": {
        "padded": {
          "padding": "20",
          "font": "HelveticaNeue-Bold",
          "size": "20"
        }
      }
    },
    "body": {
      "style": {
        "background": "#b6dce6"
      },
      "sections": [
        {
          "header": {
            "type": "label",
            "text": "Home",
            "style": {
              "background": "#f5f5f5",
              "align": "center"
            }
          },
          "items": [
            {
              "type": "horizontal",
              "style": {
                "background": "#ffffff",
                "align": "center"
              },
              "components": [
                {
                  "type": "textfield",
                  "style": {
                    "border_color": "#000000"
                  },
                  "placeholder": "Text Field",
                  "name": "name"
                }
              ]
            },
            {
              "type": "horizontal",
              "style": {
                "background": "#ffffff",
                "align": "center"
              },
              "components": [
                {
                  "type": "textarea",
                  "name": "status",
                  "placeholder": "Text Area",
                  "value": "",
                  "style": {
                    "background": "rgba(0,0,0,0)",
                    "placeholder_color": "#cecece",
                    "font": "HelveticaNeue",
                    "align": "center",
                    "width": "100%",
                    "height": "100",
                    "size": "12"
                  }
                }
              ]
            },
            {
              "type": "horizontal",
              "style": {
                "background": "#ffffff",
                "align": "center"
              },
              "components": [
                {
                  "type": "switch",
                  "name": "light",
                  "value": "true",
                  "action": {
                    "type": "$util.banner",
                    "options": {
                      "title": "Light is On?",
                      "description": "{{$get.light}}"
                    }
                  }
                }
              ]
            },
            {
              "type": "button",
              "text": "Go to Screen-1",
              "style": {
                "align": "center",
                "width": "100%",
                "height": 50,
                "color": "#ffffff",
                "background": "#0000ff"
              },
              "href": {
                "url": "https://pvybhav.github.io/json/Global_Variables/screen-1.json"
              }
            },
            {
              "type": "button",
              "text": "Open Tutorial",
              "style": {
                "align": "center",
                "width": "100%",
                "height": 50,
                "color": "#ffffff",
                "background": "#00ffff"
              },
              "href": {
                "url": "https://jasonette.github.io/Jasonpedia/hello.json"
              }
            }
          ]
        }
      ]
    }
  }
}