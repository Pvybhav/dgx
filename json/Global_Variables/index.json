{
  "$jason": {
    "head": {
      "title": "Global Test 1",
        "actions": {
        "$show": {
          "type": "$render"
        },
        "$pull": {
          "type": "$reload"
        }
      },
      "templates": {
        "body": {
          "sections": [
            {
              "type": "vertical",
              "items": [
                {
                  "type": "button",
                  "text": "{{$global.something || 'Set Global'}}",
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "https://pvybhav.github.io/json/Global_Variables/2.json",
                      "transition": "modal"
                    }
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}