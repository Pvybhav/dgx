{
  "$jason": {
    "head": {
      "title": "Line-1",
      "json_id": "field",
      "description": "Leach Area Shift Report Line-2",
      "offline": "true",
      "styles": {
        "no_padding": {
          "padding": "0"
        },
        "center_align": {
          "align": "center"
        },
        "black_color": {
          "color": "rgb(0,0,0)"
        },
        "title_styles": {
          "font": "HelveticaHeader",
          "size": 20,
          "align": "center",
          "color": "rgb(255,255,255)",
          "background": "rgb(0,162,224)"
        },
        "table_header_styles": {
          "size": 15,
          "font": "HelveticaHeader",
          "background": "rgb(14, 53, 112)",
          "color": "rgb(255, 255, 255)",
          "border": "rgb(255, 255, 255)",
          "height": "6%"
        },
        "button_styles": {
          "width": "40%",
          "height": 50,
          "space": "15",
          "color": "rgb(255, 255, 255)",
          "background": "rgb(0, 102, 204)"
        },
        "switch_styles": {
          "color": "#00ff00",
          "color:disabled": "#ff0000"
        },
        "switch_legend_styles": {
          "color": "#00ff00",
          "color:disabled": "#ff0000",
          "height": "4%",
          "width": "7%"
        },
        "col_name_styles": {
          "width": "15%"
        },
        "col_legend_styles": {
          "width": "25%"
        },
        "col_value_styles": {
          "width": "6%"
        },
        "table_row_odd_styles": {
          "background": "rgb(204,206,213)"
        },
        "table_row_even_styles": {
          "background": "rgb(231,232,235)"
        },
        "update_button_styles": {
          "width": "15%",
          "height": "7%",
          "color": "rgb(255,255,255)",
          "background": "rgb(243,216,7)",
          "corner_radius": "1%"
        },
        "submit_button_styles": {
          "width": "15%",
          "height": "7%",
          "color": "rgb(255,255,255)",
          "background": "rgb(0,147,215)",
          "corner_radius": "1%"
        },
        "previous_button_styles": {
          "color": "rgb(255, 255, 255)",
          "background": "rgb(0, 102, 255)",
          "width": "15%",
          "height": "7%",
          "corner_radius": "1%"
        },
        "home_button_styles": {
          "color": "rgb(255, 255, 255)",
          "background": "rgb(51, 102, 153)",
          "width": "15%",
          "height": "7%",
          "corner_radius": "1%"
        },
        "save_button_styles": {
          "color": "rgb(255, 255, 255)",
          "background": "rgb(51, 102, 153)",
          "width": "15%",
          "height": "7%",
          "corner_radius": "1%"
        }
      },
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "https://s3.amazonaws.com/enu-digital-ips/dg-forms/LeachTankShiftReport/data/screen_2.json",
            "preload": {
              "style": {
                "background": "#ff0000"
              },
              "layers": [
                {
                  "type": "image",
                  "url": "file://infinit.gif",
                  "style": {
                    "top": "50%-25",
                    "left": "50%-25",
                    "width": "50",
                    "height": "50"
                  }
                }
              ]
            }
          },
          "success": {
            "type": "$render",
            "success": {
              "type": "$util.toast",
              "options": {
                "text": "Page loaded successfully",
                "type": "warning"
              }
            }
          }
        },
        "$show": {
          "type": "$network.request",
          "options": {
            "url": "https://s3.amazonaws.com/enu-digital-ips/dg-forms/LeachTankShiftReport/data/screen_2.json",
            "preload": {
              "style": {
                "background": "#ff0000"
              },
              "layers": [
                {
                  "type": "image",
                  "url": "file://infinit.gif",
                  "style": {
                    "top": "50%-25",
                    "left": "50%-25",
                    "width": "50",
                    "height": "50"
                  }
                }
              ]
            }
          },
          "success": {
            "type": "$render"
          }
        },
        "$pull": {
          "type": "$flush",
          "success": {
            "type": "$reload"
          }
        },
        "handleSwitchValues": {
          "type": "$global.set",
          "options": {
            "section_id": "switch_form1_page2",
            "{{$jason.fieldName}}": "{{$get[$jason.fieldName]}}"
          }
        },
        "handleSave": {
          "type": "$global.set",
          "options": {
            "section_id": "global_form1_page2",
            "description": "{{$get.description || ''}}"
          },
          "success": {
            "type": "$util.alert",
            "options": {
              "title": "Global changed values",
              "description": "{{JSON.stringify($global)}}"
            }
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "title": {
              "type": "label",
              "text": "{{$jason.Page_Heading}}"
            },
            "style": {
              "font": "HelveticaHeader",
              "size": 20,
              "background": "rgb(0,162,224)",
              "color": "rgb(255,255,255)"
            }
          },
          "sections": [
            {
              "type": "horizontal",
              "items": [
                {
                  "type": "vertical",
                  "class": "no_padding",
                  "components": [
                    {
                      "type": "horizontal",
                      "components": {
                        "{{#each $jason.Table_Headers}}": {
                          "type": "label",
                          "text": "{{value}}",
                          "class": "{{styles}}"
                        }
                      }
                    }
                  ]
                }
              ]
            },
            {
              "type": "horizontal",
              "items": [
                {
                  "type": "vertical",
                  "class": "no_padding center_align",
                  "components": [
                    {
                      "type": "vertical",
                      "components": [
                        {
                          "type": "vertical",
                          "components": {
                            "{{#each $jason.Table_Body}}": {
                              "type": "horizontal",
                              "components": [
                                {
                                  "type": "horizontal",
                                  "components": [
                                    {
                                      "type": "horizontal",
                                      "components": [
                                        {
                                          "type": "horizontal",
                                          "components": [
                                            {
                                              "type": "horizontal",
                                              "components": [
                                                {
                                                  "type": "vertical",
                                                  "components": [
                                                    {
                                                      "type": "horizontal",
                                                      "components": {
                                                        "{{#each this[0].rowValues}}": {
                                                          "type": [
                                                            {
                                                              "{{#if type=='label'}}": "label"
                                                            },
                                                            {
                                                              "{{#else type!='label'}}": "horizontal"
                                                            }
                                                          ],
                                                          "components": [
                                                            [
                                                              {
                                                                "{{#if key=='legend'}}": {
                                                                  "type": "vertical",
                                                                  "components": [
                                                                    {
                                                                      "type": "horizontal",
                                                                      "components": [
                                                                        {
                                                                          "type": "switch",
                                                                          "name": "{{id}}",
                                                                          "value": "true",
                                                                          "class": "switch_legend_styles"
                                                                        },
                                                                        {
                                                                          "type": "label",
                                                                          "name": "{{key}}",
                                                                          "text": "= {{checked}}",
                                                                          "class": "black_color"
                                                                        }
                                                                      ]
                                                                    },
                                                                    {
                                                                      "type": "horizontal",
                                                                      "components": [
                                                                        {
                                                                          "type": "switch",
                                                                          "name": "{{id}}",
                                                                          "value": "false",
                                                                          "class": "switch_legend_styles"
                                                                        },
                                                                        {
                                                                          "type": "label",
                                                                          "name": "{{key}}",
                                                                          "text": "= {{unchecked}}",
                                                                          "class": "black_color"
                                                                        }
                                                                      ]
                                                                    }
                                                                  ]
                                                                }
                                                              },
                                                              {
                                                                "{{#elseif key!='legend'}}": {
                                                                  "type": "vertical",
                                                                  "components": [
                                                                    {
                                                                      "type": "horizontal",
                                                                      "components": [
                                                                        {
                                                                          "type": "label",
                                                                          "text": "{{contentDescriptionText || ' '}}",
                                                                          "name": "{{key}}",
                                                                          "class": "center_align black_color"
                                                                        }
                                                                      ],
                                                                      "style": {
                                                                        "height": "4%"
                                                                      }
                                                                    },
                                                                    {
                                                                      "type": "horizontal",
                                                                      "components": [
                                                                        {
                                                                          "type": "switch",
                                                                          "value": "{{value}}",
                                                                          "name": "{{id}}",
                                                                          "class": "{{styles}} center_align",
                                                                          "contentDescription": "{{contentDescription || ' '}}",
                                                                          "action": {
                                                                            "trigger": "handleSwitchValues",
                                                                            "options": {
                                                                              "fieldName": "{{id}}"
                                                                            }
                                                                          }
                                                                        }
                                                                      ],
                                                                      "style": {
                                                                        "height": "6%"
                                                                      }
                                                                    }
                                                                  ]
                                                                }
                                                              }
                                                            ]
                                                          ],
                                                          "text": "{{value}}",
                                                          "name": "{{key}}",
                                                          "class": "{{styles}}",
                                                          "style": [
                                                            {
                                                              "{{#if type=='label'}}": {
                                                                "padding": "1%"
                                                              }
                                                            }
                                                          ]
                                                        }
                                                      },
                                                      "style": {
                                                        "height": "10%"
                                                      }
                                                    }
                                                  ]
                                                }
                                              ]
                                            }
                                          ]
                                        }
                                      ]
                                    }
                                  ],
                                  "class": "{{this[0].styles}} no_padding"
                                }
                              ]
                            }
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "horizontal",
              "items": [
                {
                  "type": "horizontal",
                  "class": "no_padding",
                  "components": [
                    {
                      "type": "label",
                      "text": "Description",
                      "class": "table_header_styles",
                      "style": {
                        "width": "100%"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "type": "horizontal",
              "items": [
                {
                  "type": "horizontal",
                  "components": [
                    {
                      "type": "textarea",
                      "value": "{{$global.description || ''}}",
                      "name": "description",
                      "placeholder": "Enter description",
                      "contentDescription": "Enter Description",
                      "style": {
                        "width": "100%",
                        "height": "15%",
                        "size": "15"
                      }
                    }
                  ],
                  "class": "no_padding"
                }
              ]
            },
            {
              "type": "horizontal",
              "items": [
                {
                  "type": "horizontal",
                  "class": "no_padding center_align",
                  "style": {
                    "padding_top": "2%",
                    "padding_bottom": "2%"
                  },
                  "components": [
                    {
                      "type": "label",
                      "text": "",
                      "class": "black_color",
                      "style": {
                        "width": "20%"
                      }
                    },
                    {
                      "type": "button",
                      "name": "previous",
                      "text": "Previous",
                      "class": "previous_button_styles center_align",
                      "action": {
                        "type": "$href",
                        "options": {
                          "url": "https://s3.amazonaws.com/enu-digital-ips/dg-forms/LeachTankShiftReport/forms/screen_1.json",
                          "preload": {
                            "style": {
                              "background": "#ff0000"
                            },
                            "layers": [
                              {
                                "type": "image",
                                "url": "file://infinit.gif",
                                "style": {
                                  "top": "50%-25",
                                  "left": "50%-25",
                                  "width": "50",
                                  "height": "50"
                                }
                              }
                            ]
                          }
                        }
                      }
                    },
                    {
                      "type": "label",
                      "text": "",
                      "class": "black_color",
                      "style": {
                        "width": "5%"
                      }
                    },
                    {
                      "type": "button",
                      "name": "home",
                      "text": "Home",
                      "class": "home_button_styles center_align",
                      "action": {
                        "type": "$href",
                        "options": {
                          "url": "https://s3.amazonaws.com/enu-digital-ips/dg-forms/home.json",
                          "preload": {
                            "style": {
                              "background": "#ff0000"
                            },
                            "layers": [
                              {
                                "type": "image",
                                "url": "file://infinit.gif",
                                "style": {
                                  "top": "50%-25",
                                  "left": "50%-25",
                                  "width": "50",
                                  "height": "50"
                                }
                              }
                            ]
                          }
                        }
                      }
                    },
                    {
                      "type": "label",
                      "text": "",
                      "class": "black_color",
                      "style": {
                        "width": "5%"
                      }
                    },
                    {
                      "type": "button",
                      "name": "submit",
                      "text": "submit",
                      "class": "center_align submit_button_styles",
                      "contentDescription": "submit",
                      "action": {
                        "type": "$global.reset",
                        "options": {
                          "save": "true",
                          "filename": "LeachTankShiftReport"
                        }
                      }
                    },
                    {
                      "type": "label",
                      "text": "",
                      "class": "black_color",
                      "style": {
                        "width": "5%"
                      }
                    },
                    {
                      "type": "button",
                      "name": "save",
                      "text": "Save",
                      "class": "save_button_styles center_align",
                      "action": {
                        "trigger": "handleSave"
                      }
                    },
                    {
                      "type": "label",
                      "text": "",
                      "class": "black_color",
                      "style": {
                        "width": "5%"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  }
}